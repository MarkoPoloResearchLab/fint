.dashboard.profiles
  .panel-panel-default
    .panel-heading
      -# %h3.panel-title.text-left= t('.sortcut_menu_title')
      .btn-group
        = link_to t('.action1'), root_path, type: :button, class: "btn btn-primary btn-xs"
        = link_to "#", class: 'btn dropdown-toggle btn-primary btn-xs', data:{toggle: :dropdown} do
          %span.caret
          %span.sr-only 
            Toggle Dropdown
        %span.dropdown-arrow.dropdown-arrow-inverse
        %ul.dropdown-menu.dropdown-inverse{role: :menu}
          %li= link_to t('.action1'), root_path
          %li= link_to t('.action2'), root_path
          %li= link_to t('.action3'), root_path
          %li.divider
          %li= link_to t('.action4'), root_path
      =render 'home/dropdown_menu', dropdown_id: "dd1"
    .panel-heading
      -#.pagination-controls
        .pages-selector
          .btn-group
            = link_to t('.twenty-five'), root_path, type: :button, class: "btn btn-primary btn-sm"
            = link_to "#", class: 'btn dropdown-toggle btn-primary btn-sm', data:{toggle: :dropdown} do
              %span.caret
              %span.sr-only 
                Toggle Dropdown
            %span.dropdown-arrow.dropdown-arrow-inverse
            %ul.dropdown-menu.dropdown-inverse{role: :menu}
              %li= link_to t('.fifty'), root_path
              %li= link_to t('.one-hundred'), root_path
        .search-form
          = render 'search_form'
        .clearfix
    .panel-body
      %table.large-data-tabled.table.table-bordered.table-striped
        %thead
          %tr
            - @data.shift.each do |h|
              %th= h
        %tbody
          - @data.each do |d|
            %tr
              - d.each do |f|
                %td= f
      -#          
        %table.table.table-bordered.table-striped
          %thead
            %tr
              - @headers.each do |h|
                %th= h
          %tbody
            - @data.each do |d|
              %tr
                %td= d.field(0)
                %td= d.field(1)
                %td= d.field(2)
                %td= d.field(3)
                %td= d.field(4)
                %td= d.field(5)
                %td= d.field(6)
                %td= d.field(7)
                %td= d.field(8)
                %td= d.field(9)
        = render 'home/pagination', page: 1
