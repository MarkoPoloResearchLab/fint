-# navigation styled for Bootstrap 3.0
%nav.navbar.navbar-default.navbar-fixed-top.white
  .container-fluid
    .navbar-header
      %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to "Fisher International", "#", class: "navbar-brand"
    .collapse.navbar-collapse
      %ul.nav.navbar-nav.navbar-right
        = render 'layouts/navigation_links'
      .navbar-form.navbar-right
        .btn-group
          = link_to t('.action1'), root_path, type: :button, class: "btn btn-primary btn-sm"
          = link_to "#", class: 'btn dropdown-toggle btn-primary btn-sm', data:{toggle: :dropdown} do
            %span.caret
            %span.sr-only 
              Toggle Dropdown
          %span.dropdown-arrow.dropdown-arrow-inverse
          %ul.dropdown-menu.dropdown-inverse{role: :menu}
            %li= link_to t('.action1'), root_path
            %li= link_to t('.action2'), root_path
            %li= link_to t('.action3'), root_path
            %li.divider
            %li= link_to t('.action4'), root_path
