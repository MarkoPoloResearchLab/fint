.navbar-header
  %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
    %span.sr-only Toggle navigation
    %span.icon-bar
    %span.icon-bar
    %span.icon-bar
  -#%a.navbar-brand{:href => "#"} Project name
  = image_tag 'logo.png', class: "pull-left"
.navbar-collapse.collapse
  -# %ul.nav.navbar-nav.navbar-left
    %li
      = image_tag 'logo.png', class: "pull-left"
  %ul.nav.navbar-nav.navbar-right
    %li
      .navbar-btn
        .btn-group
          = link_to t('.action1'), root_path, type: :button, class: "btn btn-primary btn-sm"
          = link_to "#", class: 'btn dropdown-toggle btn-primary btn-sm', data:{toggle: :dropdown} do
            %span.caret
            %span.sr-only 
              Toggle Dropdown
          %span.dropdown-arrow.dropdown-arrow-inverse
          %ul.dropdown-menu.dropdown-inverse{role: :menu}
            %li= link_to t('.action1'), root_path
            %li= link_to t('.action2'), root_path
            %li= link_to t('.action3'), root_path
            %li.divider
            %li= link_to t('.action4'), root_path

    %li
      = link_to root_path do
        %span.fui-search
        = t('.search')
    %li
      = link_to t('.help'), root_path

    %li.dropdown
      = link_to root_path, class: "dropdown-toggle", data:{toggle: :dropdown} do
        = t('.notifications')
        %b.caret
        %span.navbar-new.green
          2
      %i.dropdown-arrow  
      %ul.dropdown-menu
        %li= link_to t('.action5'), root_path
        %li= link_to t('.action6'), root_path
        %li= link_to t('.action3'), root_path
        %li.divider
        %li= link_to t('.action4'), root_path

    %li.dropdown
      = link_to root_path, class: "dropdown-toggle", data:{toggle: :dropdown} do
        = t('.account')
        %b.caret
      %i.dropdown-arrow.dropdown-arrow-inverse
      %ul.dropdown-menu.dropdown-inverse
        %li= link_to t('.action5'), root_path
        %li= link_to t('.action6'), root_path
        %li= link_to t('.action3'), root_path
        %li.divider
        %li= link_to t('.action4'), root_path
